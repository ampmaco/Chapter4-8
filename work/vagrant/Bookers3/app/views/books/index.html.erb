	<% if flash[:notice] %>
	<p class="posted"><%= flash[:notice] %></p>
	<% end %>

	<h2>Books</h2>
	<table>
		<tr>
			<td><span class="title-text">Title</span></td>
			<td><span class="title-text">Body</span></td>
			<td calspan="3"></td>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= book.title %>
			</td>
			<td>
				<%= book.body %>
			</td>
			<td>
				<%= link_to "Show", book_path(book.id),class: "show_#{book.id}" %>
			</td>
			<td>
				<%= link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}" %>
			</td>
			<td>
				<%= link_to "Destroy", book_path(book.id), class: "destroy_#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>
			</td>
		</tr>
		<% end %>
	</table>
	<h3>New book</h3>
	<%= form_for(@book) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title, class: "book_title" %>
		<h4>Body</h4>
		<%= f.text_area :body, class: "book_body" %>
		<p><%= f.submit "Create Book" %></p>
	<% end %>